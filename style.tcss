/* -------------------------T-H-E-M-E------------------------- */
/* Theme: Catppuccin Mocha (+ some arbitrary highlight colors) */
/* Source: https://github.com/catppuccin/catppuccin ---------- */
/* ----------------------------------------------------------- */
$rosewater: #f5e0dc;
$pink: #f5c2e7;
$mauve: #cba6f7;
$red: #f38ba8;
$maroon: #eba0ac;
$peach: #fab387;
$yellow: #f9e2af;
$green: #a6e3a1;
$dark_green: #49AF3D
$teal: #94e2d5;
$dark_teal: #34c0cb
$sky: #89dceb;
$flamingo: #f2cdcd;
$sapphire: #74c7ec;
$blue: #89b4fa;
$lavender: #b4befe;
$text: #cdd6f4;
$subtext1: #bac2de;
$subtext0: #a6adc8;
$overlay2: #9399b2;
$overlay1: #7f849c;
$overlay0: #6c7086;
$surface2: #585b70;
$surface1: #45475a;
$surface0: #313244;
$base: #1e1e2e;
$mantle: #181825;
$crust: #11111b;

/* -----------------S-T-Y-L-E------------------ */
/* Inspired by: sshs -------------------------- */
/* Source: https://github.com/quantumsheep/sshs */
/* -------------------------------------------- */
Screen {
    layout: vertical;
    background: $base;
    color: $subtext1;
}

Input {
    background: transparent;
    border: round $sapphire;
    height: 3;
    margin: 0 1;
}
Input:focus {
    background: transparent !important;
    border: round $teal !important;
    color: $text !important;
}

ListView {
    background: transparent;
    border-top: round $blue;
}
.results-box {
    border: round $blue;
    margin: 0 1;
}
.col {
    width: 1fr;
    padding: 0 2;
    overflow: hidden;
    text-overflow: ellipsis;
    border-right: round $blue;
}
.col:last-child {
    border-right: none;
}
.keys-display-col {
    text-align: center;
    border-right: blank $mauve;
    color: $rosewater;
}

.row {
    height: 1;
    color: $subtext1;
}
.header-row {
    color: $dark_teal;
}
.selected-row {
    background: $surface1;
}

.keys-display {
    background: transparent;
    border: round $mauve;
    height: 3;
    margin: 0 1;
    dock: bottom;
    text-align: center;
    width: 100%;
}

/* -----P-O-P-U-P---S-T-Y-L-E----- */
.popup-overlay {
    align: center middle;
    height: 90%;
    width: 100%;
    layer: popup;
}
.popup {
    text-wrap: nowrap;
    padding: 0 1;
    text-align: center;
    margin: 0 1;
}
.popup-header {
    height: 2;
    layout: horizontal;
    text-align: center;
    align: center middle;
    padding: 0 2;
}
.popup-body {
    overflow: auto;
    border: none;
}
.popup-footer-col {
    width: 1fr;
    text-align: center;
    align: center middle;
}

.deletion-popup {
    border: round $red;
    height: 11;
    width: 47;
    color: $rosewater;
}
.deletion-popup-header {
    border-bottom: solid $red;
}
.deletion-popup-body {
    height: 8;
}
.deletion-popup-footer-row {
    border-top: solid $red;
    dock: bottom;
    layout: horizontal;
    height: 2;
}
.deletion-popup-footer-col {
    border-right: solid $red;
}
